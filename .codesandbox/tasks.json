{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "dev": {
      "name": "Start Dev Server",
      "command": "npm run dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      },
      "restartOn": {
        "files": [
          "./package-lock.json"
        ],
        "branch": false,
        "resume": false
      }
    },
    "build": {
      "name": "Build",
      "command": "npm run build",
      "runAtStart": false
    },
    "start": {
      "name": "Start Server",
      "command": "npm run start",
      "runAtStart": false
    },
    "lint": {
      "name": "Lint",
      "command": "npm run lint",
      "runAtStart": false
    },
    "install": {
      "name": "Install Dependencies",
      "command": "npm install",
      "restartOn": {
        "files": [
          "./package.json"
        ],
        "branch": false,
        "resume": false
      }
    },
    "npx shadcn-ui@latest init": {
      "name": "npx shadcn-ui@latest init",
      "command": "npx shadcn-ui@latest init"
    },
    "npm i stripe": {
      "name": "npm i stripe",
      "command": "npm i stripe"
    },
    "npx shadcn-ui@latest add": {
      "name": "npx shadcn-ui@latest add",
      "command": "npx shadcn-ui@latest add"
    },
    "npx shadcn-ui@latest add card": {
      "name": "npx shadcn-ui@latest add card",
      "command": "npx shadcn-ui@latest add card"
    },
    "npm install @stripe/stripe-js use-shopping-cart": {
      "name": "npm install @stripe/stripe-js use-shopping-cart",
      "command": "npm install @stripe/stripe-js use-shopping-cart"
    },
    "npx shadcn-ui@latest add toast": {
      "name": "npx shadcn-ui@latest add toast",
      "command": "npx shadcn-ui@latest add toast"
    },
    "npx shadcn-ui@latest add badge": {
      "name": "npx shadcn-ui@latest add badge",
      "command": "npx shadcn-ui@latest add badge"
    }
  }
}
